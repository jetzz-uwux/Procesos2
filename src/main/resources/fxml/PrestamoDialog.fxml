<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progs.proyectobibliotecafx.controller.PrestamoDialogController">

    <!-- TOP -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button onAction="#handleNoEntregado" text="No entregado" />
                <Button onAction="#handleEntregado" text="Entregado" />

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleActualizar" text="Actualizar" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <TextField fx:id="txtBuscar" promptText="Buscar préstamo..." />
                <Button onAction="#handleBuscar" text="Buscar" />
            </HBox>

        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <TableView fx:id="tablaPrestamos">

            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colLibro" text="Libro" />
                <TableColumn fx:id="colSocio" text="Socio" />
                <TableColumn fx:id="colFechaInicio" text="Fecha Inicio" />
                <TableColumn fx:id="colFechaLimite" text="Fecha Límite" />
                <TableColumn fx:id="colFechaEntrega" text="Fecha Entrega" />
                <TableColumn fx:id="colEstado" text="Estado" />
            </columns>

        </TableView>
    </center>

</BorderPane>
